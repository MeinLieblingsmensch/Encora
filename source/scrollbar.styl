::-webkit-scrollbar {
	width 8px
}

::-webkit-scrollbar-track {
	background rgba(black, 0)
	border-radius 12px
}

::-webkit-scrollbar-thumb {
	background: rgba(40, 40, 40, .65)
	border-radius 12px
}

::-webkit-scrollbar-thumb:hover
	background: #555

::-webkit-scrollbar-track:hover
	background rgba(black, 0.2)
